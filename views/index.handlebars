<div class="container">

    <img src="assets/img/vegan-planet-300x231.png" height="140">
    <p class="logo-text">For the People&emsp;â€¢&emsp;For the Planet</p>

    <div class="row content">
        <div class="col-md-4">
            <form action="/?_method=POST" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="burger" placeholder="Enter a burger." name="burger">
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Waiting to Be Devoured</div>
                <div class="panel-body">
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <div class="row">
                                <div class="col-sm-8">
                                    <p><strong>{{this.id}}. {{this.burger_name}}</strong></p>
                                </div>
                                <div class="col-sm-4">
                                    <form action="/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value="true">
                                        <button type="submit" class="btn">Devour!</button>
                                    </form>
                                </div>
                            </div>
                        {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Devoured</div>
                <div class="panel-body">
                    {{#each burgers}}
                        {{#if this.devoured}}
                            {{#unless this.removed}}
                                <div class="row">
                                    <div class="col-sm-8">
                                        <p><strong>{{this.id}}. {{this.burger_name}}</strong></p>
                                    </div>
                                    <div class="col-sm-4">
                                        <form action="/remove/{{this.id}}?_method=PUT" method="POST">
                                            <input type="hidden" name="removed" value="true">
                                            <button type="submit" class="btn">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            {{/unless}}
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>